{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true,
      "arrowFunctions": true,
      "binaryLiterals": true,
      "classes": true,
    }
  },
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "es6": true,
  },
  "globals": {
    "DEVELOPMENT": false,
    "PRODUCTION": false,
    "__DEBUG__": false,
    "sinon": false,
    "expect": false,
    "assert": false
  },
  "rules": {
    "no-console": 2,
    "block-spacing": [2, "always"],
    "new-parens": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 1,
    "prefer-template": 2,
    "react/prefer-stateless-function": 0,
    "max-len": [1, 255],
    // "inferno/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "arrow-body-style": [1, "as-needed"],
    "func-style": [1, "declaration", {
        "allowArrowFunctions": true,
        // "allowSimpleArrowFunctionExpression": true
    }],
    "react/jsx-no-bind": 1, // error  JSX props should not use arrow functions
    // "inferno/jsx-uses-inferno": "error",
    // "inferno/jsx-uses-vars": "error",
  },
  // {
  // "plugins": [
  //  "inferno"
  //  ]
  // }
}
