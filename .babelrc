{
  "presets": ["es2015", "react", "stage-2"],
  "env": {
    "test": {
      "presets": ["es2015", "react", "stage-2"],
      "plugins": [
        "transform-decorators-legacy",
        "transform-runtime",
        "add-module-exports"
      ]
    },
    "development": {
      "presets": ["react-hmre", "es2015", "react", "stage-2"],
      "plugins": [
        [ "react-transform", {
            "transforms": [{ "transform": "react-transform-hmr", "imports": ["react"], "locals": ["module"] }]
          }],
        "transform-decorators-legacy",
        "transform-runtime",
        "add-module-exports"
      ]
    },
    "production": {
      "presets": ["es2015", "react", "stage-2"],
      "plugins": [
        "transform-decorators-legacy",
        "transform-runtime",
        "add-module-exports"
      ]
    }
  }
}
